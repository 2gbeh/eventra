{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.vitest.json"
    }
  ],
  "include": ["./src/**/*"],
  "compilerOptions": {
    "lib": ["ES2021.String", "es2015", "dom"],
    "allowArbitraryExtensions": true,
    "noUnusedParameters": false,
    "allowJs": true,

    "module": "NodeNext",
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": ["node_modules"]
}
